<%- include('../includes/head.ejs') %>
<head>
  <link rel="stylesheet" href="/css/auth.css" />
  <link rel="stylesheet" href="/css/forms.css" />
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/auth/signup" method="POST">
      <div class="form-control">
        <label for="email">E-mail</label>
        <input
          class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>"
          type="text"
          name="email"
          id="email"
          value="<%= oldInput.email %>"
        />
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          value="<%= oldInput.password %>"
          class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>"
        />
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          value="<%= oldInput.confirmPassword %>"
          class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : ''%>"
        />
      </div>
      <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
      <button class="btn" type="submit">Signup</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
